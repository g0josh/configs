label-charging = "%{F#0d0b0b}%{B#a34a20}%percentage%%%{F-}%{B-}"

format-discharging = "%{F#791c1c}%{F-}<ramp-capacity>%{F#a34a20}%{B#791c1c}%{F-}%{B-}<label-discharging>%{F#a34a20}%{F-}"
label-discharging = "%{F#0d0b0b}%{B#a34a20}%percentage%%%{F-}%{B-}"

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = #0d0b0b
ramp-capacity-background = #791c1c

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
