#i3---------------------------------------------------------------------------
[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

ws-icon-default = 
format = <label-state>

#focused = activecolor workspace on focused monitor
label-focused = ${env:POLY_FOCUSED}

#unfocused = Inactivecolor workspace on any monitor
label-unfocused = ${env:POLY_UNFOCUSED}

#visible = activecolor workspace on unfocused monitor
label-visible = ${env:POLY_VISIBLE}

#urgentcolor = Workspace with urgency hint set
label-urgent = ${env:POLY_URGENT}

