#TIME--------------------------------------------------------------------------
[module/timePrefix]
type = custom/script
interval = 1600
exec = echo 
format-prefix = ${env:POLY_LEFTMODULEPREFIX}
format-prefix-foreground = ${env:POLY_TITLEBG}
format-suffix = ${env:POLY_LEFTMODULESUFFIX}
format-suffix-foreground = ${env:POLY_TITLEBG}
format-suffix-background = ${env:POLY_BODYBG}
label-foreground = ${env:POLY_TITLEFG}
label-background = ${env:POLY_TITLEBG}
label-padding = ${env:POLY_TITLEPADDING}

[module/time]
type = internal/date
interval = 60
date = %h %d, %A
time = %I:%M %p
label = "%date%, %time%"
label-foreground = ${env:POLY_BODYFG}
label-background = ${env:POLY_BODYBG}
label-padding = ${env:POLY_BODYPADDING}
format-suffix= ${env:POLY_RIGHTMODULESUFFIX}
format-suffix-foreground = ${env:POLY_BODYBG}

[module/timeIndia]
type = custom/script
interval = 60
exec = TZ=Asia/Kolkata date +"%I:%M %p"
label-foreground = ${env:POLY_BODYFG}
label-background = ${env:POLY_BODYBG}
label-padding = ${env:POLY_BODYPADDING}
format = <label>
format-prefix= ${env:POLY_RIGHTMODULEPREFIX}
format-prefix-foreground = ${env:POLY_BODYBG}
format-suffix= ${env:POLY_RIGHTMODULESUFFIX}
format-suffix-foreground = ${env:POLY_BODYBG}

#CAPS NUM LOCK-----------------------------------------------------------------
[module/capsNumLock]
type = internal/xkeyboard
format = <label-indicator>
format-spacing = 0
format-prefix= ${env:POLY_RIGHTMODULEPREFIX}
format-prefix-foreground = ${env:POLY_BODYBG}
format-suffix= ${env:POLY_RIGHTMODULESUFFIX}
format-suffix-foreground = ${env:POLY_BODYBG}
indicator-icon-0 = caps lock;; A
indicator-icon-1 = num lock;; 1
label-indicator-on = %icon%
label-indicator-on-foreground = ${env:POLY_BODYFG}
label-indicator-on-background = ${env:POLY_BODYBG}
label-indicator-on-padding = 1

