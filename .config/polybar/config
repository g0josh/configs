#i3---------------------------------------------------------------------------
[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

ws-icon-default = 
format = <label-state>

#focused = activecolor workspace on focused monitor
label-focused = "%index% %icon%"
label-focused-foreground = ${vars.activecolor}
label-focused-background = ${vars.bodybgcolor}
label-focused-padding = ${vars.bodypadding}
label-focused-underline = ${vars.activecolor}

#unfocused = Inactivecolor workspace on any monitor
label-unfocused = " %index% %icon% "
label-unfocused-foreground = ${vars.bodyfgcolor}
label-unfocused-background = ${vars.bodybgcolor}
label-unfocused-padding = ${vars.bodypadding}

#visible = activecolor workspace on unfocused monitor
label-visible = " %index% %icon% "
label-visible-foreground = ${vars.activecolor}
label-visible-background = ${vars.bodybgcolor}
label-visible-padding = ${vars.bodypadding}

#urgentcolor = Workspace with urgency hint set
label-urgentcolor = " %index% %icon% "
label-urgentcolor-foreground = ${vars.bodyfgcolor}
label-urgentcolor-background = ${vars.urgent}
label-urgentcolor-padding = ${vars.bodypadding}

[module/i3Prefix]
type = custom/script
interval = 1600
exec = echo "|"
format-prefix = ${vars.leftmoduleprefix}
format-prefix-foreground = ${vars.titlebgcolor}
format-suffix = ${vars.leftmodulesuffix}
format-suffix-foreground = ${vars.titlebgcolor}
format-suffix-background = ${vars.bodybgcolor}
label-foreground = ${vars.titlefgcolor}
label-background = ${vars.titlebgcolor}
label-padding = ${vars.titlepadding}

[module/i3Suffix]
type = custom/text
content = ${vars.leftmodulesuffix}
content-foreground = ${vars.bodybgcolor}

