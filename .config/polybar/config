#POWER------------------------------------------------------------------------
[module/powermenu]
type = custom/menu
expand-right = false

label-open = ${env:POLY_POWER_OPEN}
label-close = ${env:POLY_POWER_CLOSE}
#label-separator = " "

menu-0-0 = ${env:POLY_POWER_0-0}
menu-0-0-exec = menu-open-1

menu-0-1 = ${env:POLY_POWER_0-1}
menu-0-1-exec = menu-open-2

menu-0-2 = ${env:POLY_POWER_0-2}
menu-0-2-exec = menu-open-3

menu-0-3 = ${env:POLY_POWER_0-3}
menu-0-3-exec = ~/.config/lockscreen.sh

menu-1-0 = ${env:POLY_POWER_1-0}
menu-1-0-exec = reboot

menu-2-0 = ${env:POLY_POWER_2-0}
menu-2-0-exec = poweroff 

menu-3-0 = ${env:POLY_POWER_3-0}
menu-3-0-exec = ~/.config/logout.sh
