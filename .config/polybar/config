[colors]
accent = ${xrdb:color1} 
urgent = ${xrdb:color9}
inactive = ${xrdb:color0}
background = ${xrdb:background} 
foreground = ${xrdb:color2} 
transparent = #00000000

[bar/example]
monitor = ${env:MONITOR:HDMI-1}
width = 100% 
height = 22
#offset-x = 10%
#offset-y = 10%
radius = 0
fixed-center = true
