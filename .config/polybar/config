[module/powermenu]
type = custom/menu
expand-right = true
# format-spacing = 0

label-open = "%{F#791c1c}%{F-}%{B#791c1c}%{F#0d0b0b}%{F-}%{B-}%{F#791c1c}%{F-}"
label-close = "%{F#791c1c}%{F-}%{B#791c1c}%{F#0d0b0b}%{F-}%{B-}%{F#791c1c}%{F-}"

menu-0-0 = "%{F#a34a20}%{F-}%{B#a34a20}%{F#0d0b0b}Reboot%{F-}%{B-}%{F#a34a20}%{F-}"
menu-0-0-exec = menu-open-1
menu-0-1 = "%{F#a34a20}%{F-}%{B#a34a20}%{F#0d0b0b}Power-off%{F-}%{B-}%{F#a34a20}%{F-}"
menu-0-1-exec = menu-open-2

menu-1-0 = "%{F#a34a20}%{F-}%{B#a34a20}%{F#0d0b0b}Reboot?%{F-}%{B-}%{F#a34a20}%{F-}"
menu-1-0-exec = sudo reboot

menu-2-0 = "%{F#a34a20}%{F-}%{B#a34a20}%{F#0d0b0b}Power-off?%{F-}%{B-}%{F#a34a20}%{F-}"
menu-2-0-exec = sudo poweroff

