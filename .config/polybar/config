#TIME--------------------------------------------------------------------------
[module/timePrefix]
type = custom/script
interval = 1600
exec = echo 
format-prefix = ${theme.leftmoduleprefix}
format-prefix-foreground = ${theme.titlebgcolor}
format-suffix = ${theme.leftmodulesuffix}
format-suffix-foreground = ${theme.titlebgcolor}
format-suffix-background = ${theme.bodybgcolor}
label-foreground = ${theme.titlefgcolor}
label-background = ${theme.titlebgcolor}
label-padding = ${theme.titlepadding}

[module/time]
type = internal/date
interval = 60
date = %h %d, %A
time = %I:%M %p
label = "%date%, %time%"
label-foreground = ${theme.bodyfgcolor}
label-background = ${theme.bodybgcolor}
label-padding = ${theme.bodypadding}
format-suffix= ${theme.rightmodulesuffix}
format-suffix-foreground = ${theme.bodybgcolor}

[module/timeIndia]
type = custom/script
interval = 60
exec = TZ=Asia/Kolkata date +"%I:%M %p"
label-foreground = ${theme.bodyfgcolor}
label-background = ${theme.bodybgcolor}
label-padding = ${theme.bodypadding}
format = <label>
format-prefix= ${theme.rightmoduleprefix}
format-prefix-foreground = ${theme.bodybgcolor}
format-suffix= ${theme.rightmodulesuffix}
format-suffix-foreground = ${theme.bodybgcolor}

