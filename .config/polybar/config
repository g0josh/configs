# qtile workspaces and layout-------------------------------------------------
[module/qtileWs]
type = custom/ipc
hook-0 = qtile-ws get -p %pid%
initial = 1
click-left = qtile-ws set -w next
click-right = qtile-ws set -w prev
scroll-up = qtile-ws set -w prev
scroll-down = qtile-ws set -w next

