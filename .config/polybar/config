[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

ws-icon-default = 
format = <label-state> <label-mode>

; Only show workspaces on the same output as the bar
;pin-workspaces = true
label-mode = %mode%
label-mode-padding = 0
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = "%{F#791c1c}%{B#00000000}%{F-}%{B-}%{F#0d0b0b}%{B#791c1c} %index% %icon% %{F-}%{B-}%{F#791c1c}%{B#00000000}%{F-}%{B-}"

; unfocused = Inactive workspace on any monitor
label-unfocused = "%{F#191919}%{F-}%{F#a34a20}%{B#191919}%index% %icon%%{F-}%{B-}%{F#191919}%{F-}"

; visible = Active workspace on unfocused monitor
label-visible = "%{F#191919}%{F-}%{F#791c1c}%{B#191919}%index% %icon%%{F-}%{B-}%{F#191919}%{F-}"

; urgent = Workspace with urgency hint set
label-urgent = "%{F#a34a20}%{B#00000000}%{F-}%{B-}%{F#0d0b0b}%{B#a34a20}%index% %icon%%{F-}%{B-}%{F#a34a20}%{B#00000000}%{F-}%{B-}"

[module/mpd]
type = internal/mpd
format-online = <label-song><label-time><icon-prev><toggle><icon-next>

format-playing-prefix = "  %{F#791c1c}%{F-}%{F#0d0b0b}%{B#791c1c}%{F-}%{B-}"
format-paused-prefix = "  %{F#791c1c}%{F-}%{F#0d0b0b}%{B#791c1c}%{F-}%{B-}"
format-stopped-prefix = "  %{F#791c1c}%{F-}%{F#0d0b0b}%{B#791c1c}%{F-}%{B-}"

label-song = "%{F#a34a20}%{B#791c1c}%{F-}%{B-}%{F#0d0b0b}%{B#a34a20}%title%%{F-}%{B-}"
label-time = "%{F#0d0b0b}%{B#a34a20} %elapsed% / %total%%{F-}%{B-}%{F#a34a20}%{F-}"
icon-prev = "%{F#a34a20}%{F-}%{F#0d0b0b}%{B#a34a20}%{F-}%{B-}%{F#a34a20}%{F-}"
icon-stop = "%{F#a34a20}%{F-}%{F#0d0b0b}%{B#a34a20}%{F-}%{B-}%{F#a34a20}%{F-}"
icon-play = "%{F#a34a20}%{F-}%{F#0d0b0b}%{B#a34a20}%{F-}%{B-}%{F#a34a20}%{F-}"
icon-pause = "%{F#a34a20}%{F-}%{F#0d0b0b}%{B#a34a20}%{F-}%{B-}%{F#a34a20}%{F-}"
icon-next = "%{F#a34a20}%{F-}%{F#0d0b0b}%{B#a34a20}%{F-}%{B-}%{F#a34a20}%{F-}"
label-song-maxlen = 75
# label-song-ellipsis = true

format-offline = <label-offline>
label-offline = "%{F#791c1c}%{F-}%{F#0d0b0b}%{B#791c1c}%{F-}%{B-}%{F#0d0b0b}%{B#a34a20}%{F-}%{B-}%{F#a34a20}%{F-}"

[module/xkeyboard]
type = internal/xkeyboard
format = "%{F#791c1c}%{F-}<label-indicator>%{F#791c1c}%{F-}"

label-indicator = %name%
label-indicator-padding = 1
label-indicator-margin = 0
label-indicator-foreground= ${colors.background}
label-indicator-background = ${colors.accent}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = 100 

format-prefix =  "%{B#791c1c}%{F#0d0b0b}%{F-}%{B-}"

format-volume = "%{F#791c1c}%{F-}<ramp-volume>%{F#791c1c}%{B#a34a20}%{F-}%{B-}<label-volume>%{F#a34a20}%{F-}"
label-volume = %percentage%%
label-volume-foreground = ${colors.background}
label-volume-background = ${colors.foreground}

format-muted = "%{F#791c1c}%{F-}<ramp-volume>%{F#791c1c}%{B#a34a20}%{F-}%{B-}<label-muted>%{F#a34a20}%{F-}"
label-muted = 
label-muted-foreground = ${colors.background}
label-muted-background = ${colors.foreground}

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 =   
ramp-volume-2 =   
ramp-volume-3 =   
ramp-volume-4 = 
ramp-volume-foreground = ${colors.background}
ramp-volume-background = ${colors.accent}

[module/temp]
type = custom/script
interval = 5
exec = bash $HOME/.config/polybar/gettemp.sh
label-foreground = ${colors.background}
label-background = ${colors.foreground}
format = "%{F#a34a20}%{B#791c1c}%{F-}%{B-}<label>%{F#a34a20}%{F-}"
format-foreground = ${colors.foreground}
format-prefix =  "%{F#791c1c}%{F-}%{B#791c1c}%{F#0d0b0b}%{F-}%{B-}"

[module/wlan]
type = internal/network
interface = wlo1 
interval = 3.0

label-connected = %essid%|%downspeed%
label-connected-foreground = ${colors.background}
label-connected-background = ${colors.foreground}
format-connected = "%{F#a34a20}%{B#791c1c}%{F-}%{B-}<label-connected>%{F#a34a20}%{F-}"
format-connected-prefix =  "%{F#791c1c}%{F-}%{B#791c1c}%{F#0d0b0b}%{F-}%{B-}"

format-disconnected = "%{F#a34a20}%{B#791c1c}%{F-}%{B-}<label-disconnected>%{F#a34a20}%{F-}"
format-disconnected-prefix =  "%{F#791c1c}%{F-}%{B#791c1c}%{F#0d0b0b}%{F-}%{B-}"
label-disconnected =  ""
label-disconnected-foreground = ${colors.background}
label-disconnected-background = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

format-foreground = ${colors.foreground}
format = "%{F#791c1c}%{F-}%{F#0d0b0b}%{B#791c1c}%{F-}%{B-}%{F#791c1c}%{B#a34a20}%{F-}%{B-}<label>"

label = "%date%, %time%"
label-background = ${colors.foreground}
label-foreground = ${colors.background}
date = %h %d, %A 
time = %I:%M %p

[module/timeIndia]
type = custom/script
interval = 5
exec = TZ=Asia/Kolkata date +"%I:%M %p"
label-foreground = ${colors.background}
label-background = ${colors.foreground}
format = "<label>"
format-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750


[module/powermenu]
