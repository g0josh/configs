bindsym $mod_alt+End exec mpc toggle||dbus-send --print-reply --session --dest=org.mpris.MediaPlayer2.vlc /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym $mod_alt+Right exec mpc next
bindsym $mod_alt+Left exec mpc prev
