Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgba
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! special
*.foreground:   #c1c0c0
*.background:   #0d0b0b 
*.cursorColor:  #c1c0c0

! black
*.color0:       #0d0b0b
*.color8:       #222222

! red
*.color1:       #791c1c
*.color9:       #ae2d2d

! green
*.color2:       #a34a20
*.color10:      #b7601e

! yellow
*.color3:       #c8840d
*.color11:      #b29015

! blue
*.color4:       #691919
*.color12:      #8f1d27

! magenta
*.color5:       #851730
*.color13:      #ad1835

! cyan
*.color6:       #995656
*.color14:      #cd8383

! white
*.color7:       #707880
*.color15:      #c1c0c0


!URxvt----------------------------
!URxvt.letterSpace:0
URxvt.font: xft:Iosevka:style=Regular:size=12:antialias=true:hinting=true:minispace=False, xft:FuraCode Nerd Font Mono:style=Regular:size=12:minispace=False

URxvt.background:		[95]#0b0000 
URxvt.depth:                    32
URxvt*internalBorder:           10
URxvt*scrollBar:                false
URxvt*scrollTtyOutput:          false
URxvt*scrollTtyKeypress:        true
URxvt*mouseWheelScrollPage:     true
URxvt*cursorBlink:              true
URxvt*saveLines:                5000
URxvt*fade:			70
URxvt*fadeColor:		#0d0b0b
URxvt*blurRadius:		5

URxvt.keysym.C-0: command:\033]710;xft:Iosevka:style=Regular:size=12:antialias=true\007
URxvt.keysym.C-minus: command:\033]710;xft:Iosevka:style=Regular:size=10:antialias=true\007
URxvt.keysym.C-equal: command:\033]710;xft:Iosevka:style=Regular:size=15:antialias=true\007

! Normal copy-paste keybindings without perls
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
URxvt.keysym.Shift-Up: 		  command:\033]720;5\007
URxvt.keysym.Shift-Down: 	  command:\033]721;5\007
